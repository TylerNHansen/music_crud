<h1>Log in</h1>

<%= form_for(@user, url: do_login_url) do |f| %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= button_to 'log in', do_login_url %>
  </div>

<% end %>

<%= link_to 'Back', :back %>
